{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "maxNodeModuleJsDepth": 2,
        "noImplicitAny": true,
        "noEmitOnError": true,
        "sourceMap": true,
        "types": [ "reflect-metadata", "node", "ts-nameof" ],
        "module": "commonjs",
        "target": "es5",
        "lib": [ "es6", "dom" ],
        "moduleResolution": "node",
        "allowJs": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "plugins": [
            {
                "transform": "ts-nameof",
                "type": "raw"
            }
        ]
    },
    "include": [
        "./src/**/*"
    ],
    "awesomeTypescriptLoaderOptions": {
        "reportFiles": [
            "./src/**/*"
        ]
    }
}
