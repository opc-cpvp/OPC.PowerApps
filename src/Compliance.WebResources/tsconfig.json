{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "maxNodeModuleJsDepth": 2,
        "noImplicitAny": true,
        "types": [ "reflect-metadata", "node", "ts-nameof" ],
        "module": "commonjs",
        "target": "es5",
        "lib": [ "es6", "dom" ],
        "moduleResolution": "node",
        "allowJs": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": [
        "./src/**/*"
    ],
    "awesomeTypescriptLoaderOptions": {
        "reportFiles": [
            "./src/**/*"
        ]
    }
}
