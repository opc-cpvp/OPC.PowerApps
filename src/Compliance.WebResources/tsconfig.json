{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "maxNodeModuleJsDepth": 2,
        "sourceMap": true,
        "types": [
          "reflect-metadata",
          "node",
          "ts-nameof",
          "jquery",
          "bootstrap-multiselect"
        ],
        "module": "commonjs",
        "target": "es5",
        "lib": [
          "es6",
          "dom",
          "ES2020.String"
        ],
        "esModuleInterop": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "allowJs": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noEmitOnError": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "plugins": [
            {
                "transform": "ts-nameof",
                "type": "raw"
            }
        ]
    },
    "include": [
        "typings/xrmdefinitelytyped/_internal/**/*.d.ts",
        "typings/xrmdefinitelytyped/Form/**/*.d.ts",
        "typings/xrmdefinitelytyped/Web/**/*.d.ts",
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules/**",
        "js/**",
        "dist/**"
    ],
    "awesomeTypescriptLoaderOptions": {
        "reportFiles": [
            "./src/**/*"
        ]
    }
}